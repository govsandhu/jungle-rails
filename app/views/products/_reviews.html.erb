<div class="reviews">
  <div class="review-description"><%= review.description %></div>
  <div class= "review-ratings"> <% (@product.reviews.average(:rating).to_i).times { %>
    <span class="fa fa-star checked"></span>
    <% } %>
    <% (5 - @product.reviews.average(:rating).to_i).times { %>
    <span class="fa fa-star"></span>
    <% } %> </div>
  <% if current_user == review.user%>
    <div class="review-current-user"> Here's your post! </div>
    <div class="delete-review"><%= button_to "Delete Post", product_review_url(params[:id], review), :method => :delete, :class => "btn btn-danger btn-xs" %></div>
  <% else %>
    <div class="review-user"> <%= review.user.first_name %> </div>
  <% end %>
</div>
